<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProfileActivity"
    android:background="@drawable/bg3"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardElevation="15dp"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:padding="25dp"
            >
            <TextView
                android:id="@+id/add_profile_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduce yourself"
                android:textSize="21sp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                />
            <TextView
                android:id="@+id/profile_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's your full name ?"
                android:padding="5dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/add_profile_title1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                />
            <EditText
                android:id="@+id/add_profile_fullname_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_q1"
                android:drawableLeft="@drawable/person_pin_icon"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/holo_blue_dark"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/profile_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's your designation ?"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/add_profile_fullname_et"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                />
            <EditText
                android:id="@+id/add_profile_design_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_q2"
                android:drawableLeft="@drawable/case_icon"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/holo_blue_dark"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/profile_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where do you work ?"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/add_profile_design_et"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                />
            <EditText
                android:id="@+id/add_profile_org_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_q3"
                android:drawableLeft="@drawable/work_icon"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/holo_blue_dark"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/profile_q4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How can we contact you ?"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/add_profile_org_et"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                />
            <EditText
                android:id="@+id/add_profile_phone_et"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_q4"
                android:drawableLeft="@drawable/phone_icon"
                android:drawablePadding="10dp"
                android:inputType="phone"
                android:drawableTint="@android:color/holo_blue_dark"
                android:layout_centerHorizontal="true"
                />
            <Button
                android:id="@+id/profile_next_button"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_below="@id/add_profile_phone_et"
                android:layout_centerHorizontal="true"
                android:text="NEXT   > "
                android:background="@drawable/btn_layout1"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:textSize="19sp"
                android:layout_marginTop="30dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>