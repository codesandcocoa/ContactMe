<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RequestsActivity"
    android:background="@drawable/bg3">
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardElevation="15dp"
        app:cardCornerRadius="10dp"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/requests_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requests"
                android:textStyle="bold"
                android:textSize="30sp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/holo_blue_dark"
                />
            <TextView
                android:id="@+id/no_pending_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/requests_title1"
                android:text="You don't have any pending requests"
                android:textSize="20sp"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/no_pending_text"
                android:layout_centerHorizontal="true"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/requests_recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:foregroundGravity="center_horizontal"
                    />
            </ScrollView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>