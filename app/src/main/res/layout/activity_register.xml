<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bg3"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:cardElevation="20dp"
        app:cardCornerRadius="10dp"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/register_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textStyle="bold"
                android:textSize="25sp"
                android:padding="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/register_email_et"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_below="@id/register_title1"
                android:layout_centerHorizontal="true"
                android:hint="Email ID"
                android:drawableLeft="@drawable/email_icon"
                android:drawableTint="@android:color/holo_blue_dark"
                android:drawablePadding="10dp"
                android:padding="5dp"
                android:layout_marginTop="25dp"
                />
            <EditText
                android:id="@+id/register_password_et"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:layout_below="@id/register_email_et"
                android:hint="Password"
                android:drawableLeft="@drawable/lock_icon"
                android:drawablePadding="10dp"
                android:drawableTint="@android:color/holo_blue_dark"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/register_conf_password_et"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_below="@id/register_password_et"
                android:hint="Confirm Password"
                android:drawableTint="@android:color/holo_blue_dark"
                android:drawableLeft="@drawable/lock_icon"
                android:drawablePadding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                />
            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="Register"
                android:layout_below="@id/register_conf_password_et"
                android:id="@+id/register_button"
                android:background="@drawable/btn_layout1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>